# Backend Environment Variables
# Copy this file to .env and fill in the appropriate values

# Database Configuration
DB_PATH=.sql/user_auth.db

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration (REQUIRED)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# Email Configuration (for OTP emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Security Configuration
# CORS_ORIGIN: Not needed when frontend is served from backend (same-origin)
# Set only if you need to allow additional external origins
CORS_ORIGIN=http://localhost:5000
BCRYPT_ROUNDS=12

# CSV Upload Limits
# Maximum number of rows allowed in CSV uploads
MAX_CSV_ROWS=100000
# Maximum CSV file size in megabytes
MAX_CSV_SIZE_MB=100

# Verification Configuration
MX_DOMAIN=your-mx-domain.com
EM_DOMAIN=your-email-domain.com

# Testing Configuration
MOCK_SMTP_MODE=false