# Backend Environment Variables
# Copy this file to .env and fill in the appropriate values

# Admin Authentication (Required)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme

# Verification Configuration (REQUIRED)
MX_DOMAIN=your-mx-domain.com
EM_DOMAIN=your-email-domain.com

# Database Configuration
DB_PATH=.sql/user_auth.db

# Server Configuration
PORT=5000
NODE_ENV=development

# Security Configuration
# CORS_ORIGIN: Not needed when frontend is served from backend (same-origin)
# Set only if you need to allow additional external origins
CORS_ORIGIN=http://localhost:5000

# CSV Upload Limits
# Maximum number of rows allowed in CSV uploads
MAX_CSV_ROWS=100000
# Maximum CSV file size in megabytes
MAX_CSV_SIZE_MB=100

# Testing Configuration(if true it mocks the SMTP MODE for testing)
MOCK_SMTP_MODE=false