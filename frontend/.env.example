# Frontend Environment Variables
# Copy this file to .env and fill in the appropriate values

# API Configuration
VITE_API_URL=http://localhost:5000
VITE_API_TIMEOUT=10000

# App Configuration
VITE_APP_NAME=MicroSAAS Template
VITE_APP_VERSION=1.0.0
VITE_NODE_ENV=development

# Authentication Configuration
VITE_JWT_STORAGE_KEY=token
VITE_USER_STORAGE_KEY=user
VITE_REFRESH_TOKEN_STORAGE_KEY=refreshToken

# UI Configuration
VITE_TOAST_DURATION=4000
VITE_THEME_STORAGE_KEY=theme

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false
VITE_ENABLE_OTP_LOGIN=true